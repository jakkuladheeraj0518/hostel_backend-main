# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:1234@localhost:5432/hostel_management
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=hostel_management
DATABASE_USER=postgres
DATABASE_PASSWORD=1234

# Security
SECRET_KEY=your-secret-key-change-this-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis (optional - will work without Redis)
REDIS_URL=redis://localhost:6379/0

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Environment
ENVIRONMENT=development
DEBUG=True

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000", "http://127.0.0.1:8080", "http://localhost:8000", "http://127.0.0.1:8000"]

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/